{
  "name": "Colors",
  "description": "Color picker for 100r themes",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "128.png",
    "default_title": "Colors"
  },
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["static/js/content.js"]
    }
  ],
  "optional_permissions": ["<all_urls>"],
  "permissions": ["tabs", "activeTab"]
}
